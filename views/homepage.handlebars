<!-- Loop over each object in the projects array -->
{{#each posts as |post|}}
  <div class="row mb-4 project">
    <div class="col-md-5">
      <h2>
        <!-- Call helper function with triple brackets to render the emoji span as HTML -->
        {{{get_emoji}}}
        <a href="/post/{{post.id}}">{{post.name}}</a>
      </h2>
      <p>Created by {{post.user.name}} on {{post.date_created}}</p>

      <p>{{post.post_name}}</p>

      <form class="form new-project-form">
        <div class="form-group">
          <label for="project-desc">Leave Comment!</label>
          <textarea
            class="form-input"
            id="commentField"
            name="project-desc"
          ></textarea>
        </div>
        <div class="form-group">
          <button
            type="submit"
            id="{{post.id}}"
            class="btn btn-primary"
          >Create</button>
        </div>

      </form>
      {{#if comments.length}}
        <div class="col-md-6 project-list">
          <h3>Current Projects:</h3>

          {{#each comments as |comment|}}
            <div class="row mb-2">
              <div class="col-md-8">
                <h4><a
                    href="/post/{{comment.id}}"
                  >{{comment.post_body}}</a></h4>
              </div>
              <div class="col-md-4">
                <button
                  class="btn btn-sm btn-danger"
                  data-id="{{comment.id}}"
                >DELETE</button>
              </div>
            </div>
          {{/each}}
        </div>
      {{/if}}
    </div>
    <div class="col-md-7">
      <p>
        {{project.description}}
      </p>
    </div>
  </div>
{{/each}}

<script src="/js/comment.js"></script>